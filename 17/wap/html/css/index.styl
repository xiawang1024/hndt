@import './common/index.styl'
body
	overflow auto
	-webkit-overflow-scrolling: touch
.g-hd
	width 100%
	height 150px
	background #fff
	text-align center
	overflow hidden
	.logo-wrap
		width 100%
		height 110px
		margin-top 20px
		font-size 0
		.img
			height 100%
			width auto
.g-tab
	width 100%
	height 120px
	line-height 120px
	display flex
	justify-content center
	align-items center
	background #1ba2ff
	.tab-item
		flex 1
		text-align center
		font-size 38px
		height 100%
		&.isActive
			font-size 46px
			a
				font-weight 700
		a
			color #fff
			display inline-block
			width 100%
			height 100%
.g-bd
	width 100%
	border-box()
	padding 0 40px
	background #fff
	.list-wrap
		width 100%
		.list
			display flex
			width 100%
			border-box()
			padding 40px 0
			border-1px(#ddd)
			.video-wrap
				position relative
				width 330px
				height 186px
				border-box()
				.img
					display block
					width 100%
					height 100%
				.live-icon
					position absolute
					top 0
					right 0
					display block
					width 110px
					height 40px
					line-height 40px
					text-align center
					border-box()
					border 1px solid #fb8a41
					color #fb8a41
					font-size 28px
					background rgba(0,0,0,0.8)
			.text-wrap
				flex 1
				margin-left 30px
				.title
					margin-top 6px
					font-size 46px
					font-weight 500
					a
						color #000
				.desc
					margin-top 30px
					font-size 34px
					color #bbb
				.time-wrap
					width 100%
					margin-top 30px
					font-size 34px
					color #bbb
					.time-ago
						float left
					.time-total
						float right
						.time-icon
							vertical-align middle
							display inline-block
							width 33px
							height 31px
							background url('../imgs/time-icon.png') left center no-repeat
							background-size cover
						span
							vertical-align middle
.g-ft
	width 100%
	height 150px
	background #4499e1
	color #fff
	text-align center
	overflow hidden
	.version
		margin-top 20px
		font-size 36px
		a
			color #fff
	.copy
		margin-top 20px
		font-size 36px
