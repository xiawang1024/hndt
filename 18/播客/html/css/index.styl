@import './base.styl'
@import './mixin.styl'
body
	background #fff
.g-hd
	width 100%
	height 40px
	line-height 40px
	margin 0 auto
	border-bottom 1px solid #ccc
	ul
		width $body-width
		margin 0 auto
		font-size 0
		.list
			display inline-block
			width 90px
			line-height 40px
			text-align center
			border-box()
			a
				vertical-align middle
				display inline-block
				width 100%
				height 14px
				line-height 14px
				border-right 1px solid #adadad
				font-size 14px
				color rgb(102,102,102)
				border-box()
				&:hover
					color #0081dc
					text-decoration underline
			&:last-child
				a
					border-right none
.g-logo-wrap
	width $body-width
	height 112px
	margin 0 auto
	overflow hidden
	.logo-img
		float left
		height 100%
		font-size 0
		.logo
			display inline-block
			vertical-align:middle
		span
			display inline-block
			height 100%
			vertical-align middle
	.sch-wrap
		float right
		width 235px
		height 35px
		line-height 35px
		margin-top 38px
		border 1px solid #ddd
		border-box()
		padding 0 0 0 0
		.sch-ipt
			float left
			display inline-block
			width 200px
			height 100%
			border none
			background none
			padding-left 10px
			border-box()
			font-size 14px
		.sch-icon
			float right
			display inline-block
			width 33px
			height 35px
			border-box()
			background url('../imgs/sch-icon.png') center center no-repeat
			cursor pointer
.g-tab
	width 100%
	height 50px
	background #0081dc
	.tab-wrap
		flex-box()
		width $body-width
		margin 0 auto
		line-height 50px
		font-size 0
		.tab
			flex-1()
			text-align center
			font-size 16px
			a
				display inline-block
				width 100%
				height 100%
				color #fff
.g-bd
	width $body-width
	margin 30px auto 0
	.main
		float left
		width 660px
		border-box()
		.tab-wrap
			.tab-hd
				width 100%
				height 26px
				line-height 26px
				.tabs
					float left
					width 430px
					flex-box()
					.tab
						flex-1()
						font-size 16px
						text-align center
						color #666
						cursor pointer
						&.isActive
							background #0081dc
							color #fff
				.more
					float right
					a
						color #999
			.tab-cont
				width 100%
				margin-top 24px
				border-box()
				.lists-wrap
					width 100%
					border-box()
					.list
						display inline-block
						float left
						width 140px
						border-box()
						margin-right 33px
						margin-bottom 40px
						&:nth-child(4n)
							margin-right 0
						.img-wrap
							font-size 0
							width 140px
							height 140px
							.img
								width 100%
								height 100%
						.text-wrap
							font-size 14px
							color rgb(102,102,102)
							.title
								no-wrap()
								margin-top 18px
							.autor
								no-wrap()
								margin-top 8px
		.recommond-wrap
			width 100%
			border-box()
			.recom-hd
				font-size 18px
				color #0081dc
				padding-bottom 20px
				border-bottom 1px solid #999
			.recom-cont
				width 100%
				border-box()
				margin-top 30px
				.lists-wrap
					width 100%
					border-box()
					.list
						float left
						width 300px
						border-box()
						margin-bottom 30px
						margin-right 60px
						&:nth-child(2n)
							margin-right 0
						.avatar-wrap
							float left
							width 100px
							height 100px
							font-size 0
							border-box()
							.img
								width 100%
								height 100%
						.text-wrap
							float left
							width 200px
							border-box()
							padding 16px 0 0 20px
							.title
								font-size 16px
								color #0081dc
							.desc
								margin-top 8px
								font-size 14px
								line-height 1.875
	.mainc
		float right
		width 300px
		border-box()
		.title
			font-size 18px
			color #0081dc
			border-bottom 1px solid #e5e5e5
			padding-bottom 20px
		.talents-wrap
			width 100%
			border-box()
			.talent
				position relative
				width 300px
				border-box()
				padding 30px 0 30px 27px
				border-bottom 1px dashed #e5e5e5
				.ranking
					position absolute
					left 0
					top 30px
					width 15px
					height 13px
					line-height 13px
					vertical-align middle
					font-size 12px
					text-align center
					color #fff
					border-radius 2px
					background #ccc
					&.topThree
						background #fb8437
				a
					.avatar-wrap
						float left
						width 80px
						height 80px
						font-size 0
						.img
							width 100%
							height 100%
					.text-wrap
						float left
						margin-left 20px
						width 170px
						.title
							margin-top 8px
							padding-bottom 0
							border none
						.desc
							margin-top 12px
							line-height 1.6
							color #999
							font-size 13px
.g-ft
	width 100%
	margin-top 30px
	padding 40px 0 60px
	border-top 2px solid #dedede
	overflow hidden
	.ft-wrap
		width $body-width
		margin 0 auto
		text-align center
		.qrcode
			float left
			margin-left 180px
		.text
			float left
			margin-left 45px
			.row
				line-height 2.2
				font-size 12px
				color #333
				text-align left
				&.beian-wrap
					margin-top 10px
					.beian
						display inline-block
						vertical-align middle
					.txt
						display inline-block
						height 20px
						line-height 20px
						font-size 14px
						vertical-align middle
