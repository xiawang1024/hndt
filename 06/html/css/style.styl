	margin 0 auto
	overflow hidden
	.hd-links
		overflow hidden
		ul
			padding 18px 0 12px
			li
				display inline-block
				padding 0 11px
				border-right 1px solid #e4e4e4
				font-size 12px
				color rgb(68, 68, 68)
				&:last-child
					border-right none
				&:first-child 
					padding-left 0
	.hd-ad
		.img
			display block
	.filmlogo
