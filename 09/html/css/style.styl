@import './base.styl'
@import './mixin.styl'
body
	background #fff
.g-hd
	width 100%
	height 40px
	line-height 40px
	margin 0 auto
	border-bottom 1px solid #ccc
	ul
		width $body-width
		margin 0 auto
		font-size 0
		.list
			display inline-block
			width 90px
			line-height 40px
			text-align center	
			border-box()
			a
				vertical-align middle
				display inline-block
				width 100%
				height 14px
				line-height 14px
				border-right 1px solid #adadad
				font-size 14px
				color rgb(102,102,102)
				border-box()
			&:last-child
				a
					border-right none
.g-logo-wrap
	width $body-width
	height 112px
	margin 0 auto
	.logo-img
		float left
		height 100%
		font-size 0
		.logo
			display inline-block
			vertical-align:middle
		span
			display inline-block
			height 100%
			vertical-align middle
	.live-info
		float right
		height 100%
		line-height 112px
		.play-pause
			vertical-align middle
			display inline-block
			width 54px
			height 54px
			background url('../imgs/play.png') center center no-repeat
			background-size cover
		.live-name
			margin-left 10px
			font-size 16px;
			color :rgb(0, 129, 220)
.g-tab
	width 100%
	height 50px
	background #0081dc
	.tab-wrap
		width $body-width
		margin 0 auto
		line-height 50px
		font-size 0
		.tab
			display inline-block
			width 142px
			border-box()
			text-align center
			font-size 18px
			a
				display inline-block
				width 100%
				height 100%
				color #fff
.g-bd
	width $body-width
	margin 40px auto 0
	.main
		width 650px
		overflow hidden
		.slider-wrap
			width 650px
			height 366px
			overflow hidden
			.swiper-slide
				position: relative
				.img-wrap
					width 100%
					height 100%
					overflow hidden
					img
						display block
						width 100%
						height 100%
				.text-wrap
					position: absolute
					left 0
					right 0
					bottom 10px
					margin 0 auto
					width 580px
					height 80px
					padding 10px 20px
					background rgba(0, 0, 0, .4)
					border-box()
					.title
						width 80%
						line-height 1.7
						font-size 18px
						color #fff
						no-wrap()
					.desc
						line-height 1.7
						font-size 16px
						color #e7e7e7
						no-wrap()
				
			
	
		